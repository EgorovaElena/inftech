<Window x:Class="sem5_lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sem5_lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="40"/>
			<RowDefinition Height="150"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="0">
			<TextBox Name="inputTextBox" Margin="5,5,5,10" TextWrapping="Wrap" Text="Исходная матрица " AcceptsReturn="True"/>
		</Grid>

		<Grid Name="Buttons" Grid.Row="1">
			<Button Name="processTextButton" Content="Сделать красиво" Margin="0" Width="150" VerticalAlignment="Top" HorizontalAlignment="Center"/>
		</Grid>
		<Grid Name="OutputText" Grid.Row="2">
			<TextBox Name="outputTextBox" Margin="5,5,5,10" TextWrapping="Wrap" Text="Обработанная матрица"/>
		</Grid>
	</Grid>
</Window>
